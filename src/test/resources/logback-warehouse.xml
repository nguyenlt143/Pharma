<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} | %-50logger{50} | %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File Appender for Warehouse Integration Test Evidence -->
    <appender name="WAREHOUSE_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${user.dir}/logs/warehouse/integration-test.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${user.dir}/logs/warehouse/integration-test-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- Evidence Logger for Warehouse Tests -->
    <logger name="WAREHOUSE_EVIDENCE" level="INFO" additivity="false">
        <appender-ref ref="WAREHOUSE_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Spring and Hibernate Logging -->
    <logger name="org.springframework" level="WARN"/>
    <logger name="org.hibernate" level="WARN"/>

    <!-- Application Logging -->
    <logger name="vn.edu.fpt.pharma" level="DEBUG"/>

    <!-- Root Logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>

